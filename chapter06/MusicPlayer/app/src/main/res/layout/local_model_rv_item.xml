<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    app:swipeEnable="true">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:id="@+id/model_swipemenu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:swipeEnable="true">

        <LinearLayout
            android:id="@+id/model_music_item_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_layout"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/model_head_iv"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/singer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/model_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="music name "
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/model_music_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:maxLines="1"
                    android:text="singer name "
                    android:textColor="@color/grey700"
                    android:textSize="12sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_weight="0"
                    android:background="@color/colorDividerGray"></View>
            </LinearLayout>
        </LinearLayout>
        <!--<Button-->
            <!--android:id="@+id/model_swip_delete_menu_btn"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/colorRed"-->
            <!--android:gravity="center"-->
            <!--android:text="删除"-->
            <!--android:textColor="@color/colorWhite" />-->
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</LinearLayout>