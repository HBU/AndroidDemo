<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/play_list_content_swip_view"
    android:background="@drawable/selector_layout"
    android:orientation="vertical"
    android:clickable="true"
    app:swipeEnable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/play_list_content_ll"
        android:clickable="true"
        android:background="@drawable/selector_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/play_list_cover_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/album" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/play_list_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:text="我的歌单"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/play_list_music_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:maxLines="1"
                android:text="15首"
                android:textColor="@color/grey700"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/playlist_swip_delete_menu_btn"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/colorRed"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/colorWhite" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>